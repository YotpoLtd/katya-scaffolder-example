{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["widget-initializer/types"],
    "types": ["cypress", "node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["./node_modules/@applitools/eyes-cypress/index.d.ts"]
}
